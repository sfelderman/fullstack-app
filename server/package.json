{
  "name": "server",
  "version": "1.0.0",
  "description": "A very basic server",
  "main": "server.ts",
  "scripts": {
    "start": "TS_NODE_FILES=true nodemon",
    "start:dev": "yarn build:dev",
    "dev": "TS_NODE_FILES=true nodemon",
    "build": "rimraf ./build && tsc",
    "build:dev": "TS_NODE_FILES=true nodemon 'src/server.ts' --exec 'ts-node' src/server.ts -e ts,graphql",
    "prod": "yarn run build && node build/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest --config jest.config.js",
    "test-watch": "jest --config jest.config.js --watch"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "apollo-server-express": "^2.18.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.7.0",
    "eslint-plugin-prettier": "^3.1.4",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.9.0",
    "mongodb": "^3.5.7",
    "mongoose": "^5.9.15"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint-config-prettier": "^6.11.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  }
}
